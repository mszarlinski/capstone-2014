<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:bootstrapbutton="http://schemas.android.com/apk/res-auto"
    xmlns:fontawesometext="http://schemas.android.com/apk/res-auto"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:paddingBottom="@dimen/activity_vertical_margin"
        android:paddingLeft="@dimen/activity_horizontal_margin"
        android:paddingRight="@dimen/activity_horizontal_margin"
        android:paddingTop="@dimen/activity_vertical_margin"
        tools:context="pl.coursera.mszarlinski.symptoms.activity.checkIn.HowBadIsMouthPainActivity" >

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="@string/mouth_pain_question" 
            style="@style/header" />

         <com.beardedhen.androidbootstrap.BootstrapButton
             	android:id="@+id/controlledButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/well_controlled"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_icon_left="fa-thumbs-o-up"
                bootstrapbutton:bb_type="default" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/moderateButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/moderate"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_icon_left="fa-thumbs-o-down"
                bootstrapbutton:bb_type="default" />

            <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/severeButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/severe"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_icon_left="fa-thumbs-down"
                bootstrapbutton:bb_type="default" />
            
             <com.beardedhen.androidbootstrap.BootstrapButton
                android:id="@+id/nextButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_margin="10dp"
                android:text="@string/next"
                bootstrapbutton:bb_roundedCorners="true"
                bootstrapbutton:bb_icon_right="fa-check"
                bootstrapbutton:bb_type="info" />
    </LinearLayout>

</ScrollView>